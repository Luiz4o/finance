
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  amount Float?
  recipes Recipe[]
  expenses Expense[]

  @@map("users")
}

model Recipe{
  id Int @id @default(autoincrement())
  description String @db.VarChar(250)
  price Float
  date DateTime   @default(now())
  user User @relation(fields: [userId], references: [id])
  userId Int

  @@map("recipes")
}

model Expense{
  id Int @id @default(autoincrement())
  description String @db.VarChar(250)
  cost Float
  date DateTime   @default(now())
  user User @relation(fields: [userId], references: [id])
  userId Int

  @@map("expenses")
}


